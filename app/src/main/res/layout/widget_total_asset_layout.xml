<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <!-- Main content area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/widget_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NT$ 0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_primary"
            android:gravity="center"
            android:layout_marginBottom="2dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_currency_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TWD"
            android:textSize="10sp"
            android:textColor="@color/widget_text_secondary"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Status area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/widget_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="8sp"
            android:textColor="@color/widget_text_tertiary"
            android:gravity="center"
            android:visibility="gone"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Status indicator -->
        <View
            android:id="@+id/widget_status_indicator"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/widget_status_indicator"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>